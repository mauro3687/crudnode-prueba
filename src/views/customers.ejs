<%- include("partials/_header") %>

<div class="container-fluind mt-5">
  <div class="row riw">
    <div class="col-lg-4">
      <div class="card-body">
        <form action="/add" method="POST">
          <input
            type="text"
            name="nserie"
            placeholder="Nºserie"
            class="form-control mb-2"
            autofocus
          />
          <input
            type="text"
            name="dispositivo"
            placeholder="dispositivo"
            class="form-control mb-2"
          />

          <select name="modelo">
            <option>GG</option>
            <option>AA</option>
            <option>BG</option>
            <option>AB</option>
          </select>

          <input
            type="file"
            name="img"
            placeholder="image"
            class="form-control mb-2"
            required
          />

          <button type="submit" class="btn btn-info boton">
            save customer
          </button>
        </form>
      </div>
      <div class="col-lg-8 riw">
        <table class="table table-dark table-bordered table-hover tableta">
          <thead>
            <tr>
              <td>Id</td>
              <td>n°serie</td>
              <td>Dispositivo</td>
              <td>Modelo</td>
              <td>imagen</td>
              <td>Fecha</td>
              <td>Actions</td>
            </tr>
          </thead>
          <tbody>
            <% if (customers) { %> <% for(var i = 0; i < customers.length; i++)
            { %>
            <tr>
              <td><%= customers[i].id %></td>
              <td><%= customers[i].nserie %></td>
              <td><%= customers[i].dispositivo %></td>
              <td><%= customers[i].modelo %></td>
              <td><%= customers[i].img%></td>
              <td><%= customers[i].fecha %></td>

              <td class="d-flex gap-2">
                <a href="/update/<%= customers[i].id %>" class="btn btn-info">
                  Edit
                </a>
                <a href="/delete/<%= customers[i].id %>" class="btn btn-danger"
                  >Delete</a
                >
              </td>
            </tr>
            <% } %> <% } %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>

<%- include("partials/_footer") %>
